<h1>Create Question</h1>
<div class="row">
  <div class="col-md-4">
    <p>Guidlines for Questions</p>
    <ul>
      <li>Plan your questions</li>
      <li>Know your purpose</li>
      <li>Open COnversation</li>
      <li>Use neutral wording</li>
      <li>Dont be a dick!</li>
    </ul>
  </div>
  <div class="col-md-8">
    <% form_for @question do |f| %>
    <div class="form_group">
      <%= f.label :title %>
      <%= f.text_field :title, class:'form-control', placeholder: "Enter Question Title" %>
    </div>

    <div class="form-group">
      <%- f.label :body%>
      <%= f.text_area :body, rows:8, class: 'form-control', placeholder: "Enter Question body" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>

    <%end %>
    </div>
  </div>
</div>
